<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_learn_item"
    android:layout_width="170dp"
    android:layout_height="250dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/card_learn_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pumpkin"
            android:padding="15dp">

            <TextView
                android:id="@+id/item_learn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:text="Lindol"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/item_learn_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/earthqauke"
                android:contentDescription="Imahe ng Lindol"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

</com.google.android.material.card.MaterialCardView>