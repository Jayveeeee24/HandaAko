<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_home_item"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp">
    
    <RelativeLayout
        android:id="@+id/card_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/amethyst"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagsusulit"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/item_home_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamin kung paano ang \ndapat gawin pag may sakuna"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText"
            android:layout_below="@id/item_home_title"/>

        <ImageView
            android:id="@+id/item_home_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/ewan"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>