<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:contentPaddingTop="5dp"
    app:contentPaddingBottom="5dp"
    app:contentPaddingLeft="5dp"
    app:contentPaddingRight="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/emergency_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kawit Bureau of Fire Protection"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/opensans_medium"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/emergency_contact_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="484 5250"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_below="@id/emergency_contact_name"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/opensans_medium"
                android:textSize="16sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/emergency_call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

            <ImageView
                android:id="@+id/emergency_call"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/baseline_local_phone_24"
                app:tint="@color/blue_surf" />

        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>